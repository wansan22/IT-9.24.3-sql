4 работа в перечне предметной области. В идеале писать всё большими, но это не меняет смысл.
USE dbtest;
CREATE TABLE connection_config (
    id INT PRIMARY KEY AUTO_INCREMENT,
    param_name VARCHAR(50) NOT NULL,   -- Как называется параметр
    param_value VARCHAR(255),          -- Какое у него значение
    description VARCHAR(300)           -- Что это означает
);
INSERT INTO connection_config (param_name, param_value, description) VALUES
('mysql_host', '127.0.0.1', 'Адрес сервера MySQL'),
('mysql_port', '3306', 'Порт MySQL (стандартный)'),
('mysql_database', 'dbtest', 'Имя ЭТОЙ базы данных'),
('mysql_username', 'root', 'Пользователь для подключения'),
('mysql_password', '1234', 'Пароль '),
('mysql_charset', 'utf8mb4', 'Чтобы русские буквы работали');

